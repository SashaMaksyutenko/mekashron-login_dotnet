@model LoginApp.Models.LoginModel
@{
    ViewData["Title"] = "Sign In";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h3 class="text-center mb-4">Sign In</h3>

                @if (!string.IsNullOrWhiteSpace(ViewBag.Message))
                {
                    <div class="alert alert-@ViewBag.AlertType">
                        @ViewBag.Message
                    </div>
                }

                @if (TempData["LoginSuccessMessage"] != null)
                {
                    <div class="alert alert-success">
                        @TempData[key: "LoginSuccessMessage"]
                    </div>
                }

                <form method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Username" class="form-label" for="Username">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label" for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Sign In</button>
                </form>

                <div class="text-center mt-3">
                    <a asp-action="Register" class="link-primary">Create account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}